<%- include ('partials/_header'); %>

<body>

  <%- include ('partials/_navigation'); %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h2 class="subheading"><%= post.title %> </h2>
            <span class="meta"><%= post.dateCreated %> </span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mt-2">
          <%= post.detail %> 
        </div>
        <div class="col-lg-4 col-md-2">
          <a href="/edit/<%= post._id %>" class="btn btn-primary">Update</a>
          <a href="/delete-post/<%= post._id %>?_method=DELETE" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <%- include ('partials/_footer'); %>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
